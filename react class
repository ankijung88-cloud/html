import { useState } from 'react'

// ë¡œë³´íŠ¸ì—ê²Œ ì¼ ì‹œí‚¤ì
// í˜„ì¬ ìƒíƒœ í™•ì¸
// ë‚´ê°€ ì§€ì‹œí•œ ë‚´ìš© ì‹¤í–‰
// state {count:number}>stateëŠ” ìˆ«ìë¼ê³  ì•½ì†í•˜ì

const App = () => {
  const [state, setState] = useState(0)
  const increment = () => {
    setState(state + 1)
  }
  const decrement = () => {
    setState(state + 1)
  }
  return (
    <>
      <h3>ìˆ«ì ì¹´ìš´íŠ¸</h3>
      <p>í˜„ì¬ ìˆ«ì: {state}</p>
      <button onClick={increment}>í•˜ë‚˜ ëŠ˜ë ¤</button>
      <button onClick={decrement}>í•˜ë‚˜ ì¤„ì—¬</button>
    </>
  )
}

export default App

import { useReducer } from 'react'

function counterReducer(
  state: { count: number },
  action: { type: 'INCREMENT' } | { type: 'DECREMENT' } | { type: 'RESET' }
): { count: number } {
  switch (
    action.type // action.typeì— ë”°ë¼ ë‹¤ë¥¸ ë™ì‘ì„ ì‹œí‚¨ë‹¤
  ) {
    case 'INCREMENT': //í•˜ë‚˜ ëŠ˜ë¦¬ë¼ëŠ” ì§€ì‹œê°€ ë“¤ì–´ì˜¨ ê²½ìš°
      return { count: state.count + 1 }
    case 'DECREMENT': // í•˜ë‚˜ ì¤„ì´ë¼ëŠ” ì§€ì‹œê°€ ë“¤ì–´ì˜¨ ê²½ìš°
      return { count: state.count - 1 }
    case 'RESET': // í•˜ë‚˜ ì¤„ì´ë¼ëŠ” ì§€ì‹œê°€ ë“¤ì–´ì˜¨ ê²½ìš°
      return { count: (state.count = 0) }
    default: // ì˜ˆìƒì¹˜ ëª»í•œ(ì•Œì§€ ëª»í•˜ëŠ”) ì§€ì‹œê°€ ë“¤ì–´ì˜¨ ê²½ìš°
      throw new Error('ì•Œ ìˆ˜ ì—†ëŠ” ì•¡ì…˜ íƒ€ì…ì…ë‹ˆë‹¤.')
  }
}

const App = () => {
  const initialState: { count: number } = { count: 0 }
  //ì²˜ìŒ ì‹œì‘í•  ë•Œ ì‹œì‘ê°’ì€'0'ì´ì•¼
  const [state, dispatch] = useReducer(counterReducer, initialState)
  //useReducerë¥¼ ë¶€ë¥´ëŠ” ì£¼ë¬¸ì´ë‹¤
  //counterReducer<ì‹¤ì œì ìœ¼ë¡œ ì‘ì—…ì„ ì§„í–‰í•˜ëŠ” ì‹¬ë¶€ë¦„ ê¾¼
  //ì§„í–‰í•˜ëŠ” ì‹¬ë¶€ë¦„ê¾¼ì—ê²Œ ì´ˆê¸°ê°’ì´ initialStateì— ë“¤ì–´ìˆë‹¤
  //useReducerì€ í•­ìƒ ë‘ê°€ì§€ ì •ë³´ë¥¼ ë°˜í™˜í•œë‹¤.
  //1. ì‹¬ë¶€ë¦„ê¾¼ì´ ê´€ë¦¬í•˜ê³  ìˆëŠ” ê²ƒì˜ ìƒíƒœ
  //2. ì‹¬ë¶€ë¦„ê¾¼ì—ê²Œ ì¼ì„ ì‹œí‚¬ ìˆ˜ ìˆëŠ” ì‘ë™ ë²„íŠ¼

  return (
    <>
      <p>í˜„ì¬ ìƒíƒœ: {state.count}</p>
      <button onClick={() => dispatch({ type: 'INCREMENT' })}>ì¦ê°€</button>
      <button onClick={() => dispatch({ type: 'DECREMENT' })}>ê°ì†Œ</button>
      <button onClick={() => dispatch({ type: 'RESET' })}>ì´ˆê¸°í™”</button>
    </>
  )
}